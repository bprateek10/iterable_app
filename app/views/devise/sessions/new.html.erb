<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <h2 class="text-center">Sign in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mt-3' }) do |f| %>
        <div class="form-group mb-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", required: true, class: 'form-control' %>
        </div>

        <div class="form-group mb-3 text-center">
          <%= f.submit "Sign in", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
